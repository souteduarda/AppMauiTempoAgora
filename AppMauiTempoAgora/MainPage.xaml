<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiTempoAgora.MainPage"
             BackgroundColor="#9f9f9f">
    
    <ScrollView>
        <StackLayout Spacing="10" Margin="10">

            <Button Text="Obter Localização" Clicked="Button_Clicked" HorizontalOptions="Center" Margin="10" BackgroundColor="#1E90FF"/>

            <Label Text="Latitude:" />
            <Entry x:Name="lbl_latitude" Text="37,421998333333335" />

            <Label Text="Longitude:" />
            <Entry x:Name="lbl_longitude" Text="-122,084" />

            <Button Text="Obter Placemark" Clicked="Button_Clicked_1" HorizontalOptions="Center" Margin="10" BackgroundColor="#1E90FF"/>

            <Label x:Name="lbl_reverso" Text="Dados gerais de Local" />

            <Button Text="Obter Previsão do Tempo" Clicked="Button_Clicked_2" HorizontalOptions="Center" Margin="10" BackgroundColor="#1E90FF"/>

            <Label x:Name="lbl_previsao" />

        </StackLayout>
    </ScrollView>


</ContentPage>
